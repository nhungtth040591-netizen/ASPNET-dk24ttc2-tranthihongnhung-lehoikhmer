@model KhmerFestival.Web.Models.Category

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = Model.CategoryId == 0 ? "Thêm danh mục" : "Cập nhật danh mục";
    var categories = ViewBag.Categories as System.Collections.Generic.List<KhmerFestival.Web.Models.Category>;
}

<div class="card shadow-sm">
    <div class="card-header">
        <strong>@ViewData["Title"]</strong>
    </div>
    <div class="card-body">
        <form asp-action="CategoryEdit" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="CategoryId" type="hidden" />

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Slug">Slug</label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Danh mục cha</label>
                <select asp-for="ParentCategoryId" class="form-control">
                    <option value="">-- Không có --</option>
                    @if (categories != null)
                    {
                        foreach (var cat in categories)
                        {
                            if (cat.CategoryId == Model.CategoryId) { continue; }
                            <option value="@cat.CategoryId">@cat.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Description">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save mr-1"></i> Lưu
            </button>
            <a asp-action="CategoryList" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
