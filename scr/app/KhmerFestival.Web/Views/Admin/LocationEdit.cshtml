@model KhmerFestival.Web.Models.Location

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = Model.LocationId == 0 ? "Thêm địa điểm" : "Cập nhật địa điểm";
    var locations = ViewBag.Locations as System.Collections.Generic.List<KhmerFestival.Web.Models.Location>;
}

<div class="card shadow-sm">
    <div class="card-header">
        <strong>@ViewData["Title"]</strong>
    </div>
    <div class="card-body">
        <form asp-action="LocationEdit" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="LocationId" type="hidden" />

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Cấp (Level)</label>
                <input asp-for="Level" class="form-control" type="number" min="1" max="5" />
                <small class="text-muted">Ví dụ: 1 = Tỉnh, 2 = Huyện, 3 = Xã...</small>
            </div>

            <div class="form-group">
                <label>Địa điểm cha</label>
                <select asp-for="ParentId" class="form-control">
                    <option value="">-- Không --</option>
                    @if (locations != null)
                    {
                        foreach (var loc in locations)
                        {
                            if (loc.LocationId == Model.LocationId) { continue; }
                            <option value="@loc.LocationId">@loc.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Notes">Ghi chú</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save mr-1"></i> Lưu
            </button>
            <a asp-action="LocationList" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
