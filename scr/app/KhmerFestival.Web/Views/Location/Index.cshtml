@model KhmerFestival.Web.Models.ViewModels.LocationListViewModel

@{
    ViewData["Title"] = "Địa điểm lễ hội";

    // Lấy giá trị level hiện tại từ query string (vd: ?level=1)
    var currentLevel = Context.Request.Query["level"].ToString();
}

<h1 class="display-5 mb-4 text-center">Địa điểm lễ hội Khmer</h1>

<div class="row mb-4">
    <div class="col-md-12 d-flex justify-content-end">           
        <form method="get" asp-action="Index" asp-controller="Location" class="form-inline">
            <label class="mr-2">Lọc theo cấp:</label>
            <select class="form-control form-control-sm mr-2"
                    style="min-width: 180px;"
                    name="level"
                    onchange="this.form.submit();">
                <option value=""
                        selected="@(string.IsNullOrEmpty(currentLevel) ? "selected" : null)">
                    Tất cả cấp
                </option>
                <option value="1"
                        selected="@(currentLevel == "1" ? "selected" : null)">
                    Cấp tỉnh / thành phố
                </option>
                <option value="2"
                        selected="@(currentLevel == "2" ? "selected" : null)">
                    Cấp quận / huyện
                </option>
                <option value="3"
                        selected="@(currentLevel == "3" ? "selected" : null)">
                    Cấp xã / phường
                </option>
            </select>

        </form>
     </div>
</div>

<div class="row">
    @if (Model.Locations == null || !Model.Locations.Any())
    {
        <div class="col-12">
            <p>Chưa có địa điểm nào.</p>
        </div>
    }
    else
    {
        foreach (var loc in Model.Locations)
        {
            string levelText;
            if (loc.Level == 1)
            {
                levelText = "Cấp tỉnh / thành phố";
            }
            else if (loc.Level == 2)
            {
                levelText = "Cấp quận / huyện";
            }
            else if (loc.Level == 3)
            {
                levelText = "Cấp xã / phường";
            }
            else
            {
                levelText = "Địa điểm";
            }

            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm hover-shadow">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@loc.Name</h5>

                        <p class="card-text text-muted small mb-1">
                            <i class="fas fa-map-marker-alt mr-1"></i>@levelText
                            @if (loc.Parent != null)
                            {
                                @($" • Thuộc: {loc.Parent.Name}")
                            }
                        </p>

                        @if (!string.IsNullOrEmpty(loc.Notes))
                        {
                            <p class="card-text text-muted small">
                                @(loc.Notes.Length > 120
                                    ? loc.Notes.Substring(0, 120) + "..."
                                    : loc.Notes)
                            </p>
                        }

                        <div class="mt-auto">
                            <a asp-controller="Location"
                               asp-action="Detail"
                               asp-route-id="@loc.LocationId"
                               class="btn btn-sm btn-outline-primary">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Phân trang địa điểm" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link"
                   href="@Url.Action("Index", new { page = Model.PageNumber - 1, level = currentLevel })">
                    &laquo;
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { page = i, level = currentLevel })">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   href="@Url.Action("Index", new { page = Model.PageNumber + 1, level = currentLevel })">
                    &raquo;
                </a>
            </li>
        </ul>
    </nav>
}
