@model KhmerFestival.Web.Controllers.SystemConfigEditViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Cấu hình hệ thống";
}

<div class="card shadow-sm">
    <div class="card-header">
        <strong>Cấu hình hệ thống</strong>
    </div>
    <div class="card-body">
        <form asp-action="ConfigEdit" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="SiteName">Tên website</label>
                <input asp-for="SiteName" class="form-control" />
                <span asp-validation-for="SiteName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ContactEmail">Email liên hệ</label>
                <input asp-for="ContactEmail" class="form-control" />
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="FeaturedFestivalCount">Số lễ hội nổi bật trên trang chủ</label>
                <input asp-for="FeaturedFestivalCount" class="form-control" type="number" min="1" />
                <span asp-validation-for="FeaturedFestivalCount" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save mr-1"></i> Lưu cấu hình
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
