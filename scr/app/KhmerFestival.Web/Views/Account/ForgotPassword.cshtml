@model KhmerFestival.Web.Models.ForgotPasswordViewModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm">
            <div class="card-header">
                <strong><i class="fas fa-key mr-1"></i> Quên mật khẩu</strong>
            </div>
            <div class="card-body">
                <p class="text-muted small">
                    Nhập địa chỉ email mà bạn đã đăng ký.
                    Hệ thống sẽ gửi cho bạn một liên kết để đặt lại mật khẩu (nếu email tồn tại).
                </p>

                <form asp-action="ForgotPassword" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <a asp-action="Login" asp-controller="Account" class="btn btn-link">
                        Quay lại đăng nhập
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane mr-1"></i> Gửi email
                    </button>         
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
